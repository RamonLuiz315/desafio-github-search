<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Campo de texto com hint -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuário do GitHub">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botão salvar e ver repositórios -->
    <Button
        android:id="@+id/btnSaveAndOpen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar e ver repositórios"
        android:layout_marginTop="16dp"/>

    <!-- Botão redefinir usuário -->
    <Button
        android:id="@+id/btnResetUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redefinir usuário"
        android:layout_marginTop="8dp"/>

    <!-- RecyclerView para listar os repositórios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRepositories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"/>

</LinearLayout>
